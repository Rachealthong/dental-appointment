elseif ($action == 'reschedule') {
    // Fetch original appointment details
    $sql = "SELECT a.appointment_id, d.dentist_name, s.service_type, 
                   sch.available_date, sch.available_time, a.remarks 
            FROM appointments a
            JOIN schedule sch ON a.schedule_id = sch.schedule_id
            JOIN dentists d ON sch.dentist_id = d.dentist_id
            JOIN services s ON a.service_id = s.service_id
            WHERE a.appointment_id = ?";
    $stmt = $conn->prepare($sql);
    $stmt->bind_param("i", $appointment_id);
    $stmt->execute();
    $result = $stmt->get_result();
    $appointment = $result->fetch_assoc();

    // Fetch available dentists
    $sql = "SELECT dentist_id, dentist_name FROM dentists";
    $result = $conn->query($sql);
    $dentists = $result->fetch_all(MYSQLI_ASSOC);

    // Fetch available services
    $sql = "SELECT service_id, service_type FROM services";
    $result = $conn->query($sql);
    $services = $result->fetch_all(MYSQLI_ASSOC);

    // Fetch available dates and times
    $sql = "SELECT schedule_id, available_date, available_time FROM schedule WHERE available_date > NOW()";
    $result = $conn->query($sql);
    $available_slots = $result->fetch_all(MYSQLI_ASSOC);

    // Display reschedule form
    echo '<h2>Original Appointment</h2>';
    echo '<ul>';
    echo '<li>Appointment ID: ' . htmlspecialchars($appointment['appointment_id']) . '</li>';
    echo '<li>Dentist: ' . htmlspecialchars($appointment['dentist_name']) . '</li>';
    echo '<li>Service: ' . htmlspecialchars($appointment['service_type']) . '</li>';
    echo '<li>Date: ' . htmlspecialchars($appointment['available_date']) . '</li>';
    echo '<li>Time: ' . htmlspecialchars($appointment['available_time']) . '</li>';
    echo '<li>Remarks: ' . htmlspecialchars($appointment['remarks']) . '</li>';
    echo '</ul>';

    echo '<h2>Reschedule Appointment</h2>';
    echo '<form method="post" action="reschedule_booking.php">';
    echo '<input type="hidden" name="appointment_id" value="' . htmlspecialchars($appointment_id) . '">';
    
    echo '<label for="dentist">Choose a Dentist:</label>';
    echo '<select name="dentist" id="dentist" required>';
    echo '<option value="" disabled selected>Select a dentist</option>';
    foreach ($dentists as $dentist) {
        echo '<option value="' . htmlspecialchars($dentist['dentist_id']) . '">' . htmlspecialchars($dentist['dentist_name']) . '</option>';
    }
    echo '</select>';
    echo '<br>';

    echo '<label for="service">Choose a Service:</label>';
    echo '<select name="service" id="service" required>';
    echo '<option value="" disabled selected>Select a service</option>';
    foreach ($services as $service) {
        echo '<option value="' . htmlspecialchars($service['service_id']) . '">' . htmlspecialchars($service['service_type']) . '</option>';
    }
    echo '</select>';
    echo '<br>';

    echo '<label for="date">Preferred Date:</label>';
    echo '<select name="date" id="date" required>';
    echo '<option value="" disabled selected>Select a date</option>';
    foreach ($available_slots as $slot) {
        echo '<option value="' . htmlspecialchars($slot['available_date']) . '">' . htmlspecialchars($slot['available_date']) . '</option>';
    }
    echo '</select>';
    echo '<br>';

    echo '<label for="time">Preferred Time:</label>';
    echo '<select name="time" id="time" required>';
    echo '<option value="" disabled selected>Select a time</option>';
    foreach ($available_slots as $slot) {
        echo '<option value="' . htmlspecialchars($slot['available_time']) . '">' . htmlspecialchars($slot['available_time']) . '</option>';
    }
    echo '</select>';
    echo '<br>';

    echo '<button type="submit">Reschedule</button>';
    echo '</form>';
}
